<h1>书本归还</h1>
 <p><%= flash[:message] %></p> 
<%= form_for :borrow ,url: return_do_borrow_path(@borrow) do |f| %>
  <p>
    <%= f.label :书籍序列号 %><br>
    <%= @borrow.article_id%>-<%= @borrow.article_name%>
  </p>
  <p>
    <%= f.label :借书人 %><br>
    <%= @borrow.user_id%>-<%= @borrow.user_name%>
  </p>

  <p>
    <%= f.submit '确认'%>
  </p>

  <%= link_to '返回', borrows_path %>
<% end %>