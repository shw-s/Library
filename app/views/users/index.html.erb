<h1>用户管理</h1>
  <%= link_to '书籍目录' , articles_path %>
  <%= link_to '角色管理', roles_path %> 

  <table>
    <tr>
      <th>用户名   </th>
      <th>角色 </th>
      <th colspan="3"></th>
    </tr>

  <% @users.each do |user|%>
    
    <tr>
      <td><%= user.name %></td>
      <td><%= user.roles.map(&:name).join(',') %></td>
    
      <td><%= link_to '角色分配', role_assignment_user_path(user) %></td>
      <td><%= link_to '用户删除', user_path(user),
              method: :delete,
              data: { confirm: '你确认操作吗？' } %></td>

    </tr> 
  <% end %>